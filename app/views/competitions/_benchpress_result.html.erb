<div class = "mr-1 sm:mr-10">
  <div class="text-sm sm:text-base text-primary">MAX</div>
  <div class="text-xl sm:text-2xl font-bold text-primary"><%= competition.total_lifted_weight_result(competition) %>kg</div>
</div>
<div class="text-center sm:mr-8">
  <div class="text-sm sm:text-base text-gray-500">1st</div>
  <div class="text-base sm:text-lg font-bold <%= "line-through" if competition.benchpress_first_attempt_failure?(competition) %>"><%= competition.first_benchpress_result(competition) %>kg</div>
</div>
<div class="text-center sm:mr-8">
  <div class="text-sm sm:text-base text-gray-500">2nd</div>
  <div class="text-base sm:text-lg font-bold <%= "line-through" if competition.benchpress_second_attempt_failure?(competition) %>"><%= competition.second_benchpress_result(competition) %>kg</div>
</div>
<div class="text-center sm:mr-8">
  <div class="text-sm sm:text-base text-gray-500">3rd</div>
  <div class="text-base sm:text-lg font-bold <%= "line-through" if competition.benchpress_third_attempt_failure?(competition) %>"><%= competition.third_benchpress_result(competition) %>kg </div>
</div>
